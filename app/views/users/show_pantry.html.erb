<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @ingredients.any? %>
      <ul class="users follow">
        <%= render @stocks %>
      </ul>
    <% end %>
  </div>
</div>


<script>
$(document).ready(function(){
  $(".toggle").click(function(){
    $.ajax({
      type: "POST",
      url: "/stocks/" + event.target.id + "/toggle",
      });
   });
  $(".refill").click(function(){
    $.ajax({
      type: "POST",
      url: "/stocks/" + event.target.id + "/refill",
      });
   });
  $(".delete").click(function(){
    var el = $('.stock' + event.target.id);
    $.ajax({
      type: "DELETE",
      url: "/stocks/" + event.target.id,
      success: function(data){
        el.remove();
      }
      });
   });
});
</script>

